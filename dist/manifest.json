{
  "manifest_version": 3,
  "name": "AuthenticatorPlus",
  "version": "1.0",
  "description": "Improved version of Authenticator for Chrome. Scan via camera or marquee select. Accounts are encrypted and synced across devices.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "assets/icon16.png"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "options_page": "html/options.html",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}