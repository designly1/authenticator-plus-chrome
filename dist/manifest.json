{
  "manifest_version": 3,
  "name": "AuthenticatorPlus",
  "version": "1.0",
  "description": "Improved version of Authenticator for Chrome. Supports multi-account migration from Google Authenticator, camera scan, and marquee scan from web page. Accounts are encrypted and synced across devices.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "assets/icon16.png"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/marquee.gif"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}